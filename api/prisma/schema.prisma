// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id      String @id @default(uuid())
  address String @unique
}

model AuthNonce {
  id         String   @id @default(uuid())
  address    String
  nonce      String
  expiration DateTime
}
